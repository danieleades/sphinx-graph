{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": true,
  "requiredStatusChecks": [
    // Gate automerge on the CI collector job.
    "CI Summary"
  ],
  "enabledManagers": [
    "pep621",
    "pre-commit",
    "custom.regex",
    "github-actions"
  ],
  // Enable GitHub security advisories and OSV.
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "osvVulnerabilityAlerts": true,
  // Security updates should bypass any scheduling.
  "packageRules": [
    {
      "matchUpdateTypes": [
        "security"
      ],
      "schedule": [
        "at any time"
      ]
    }
  ],
  // Monthly lockfile refresh to reduce churn.
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 5am on the first day of the month"
    ]
  },
  // Manage the pinned UV version inside CI workflows.
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^\\.github/workflows/.*\\.ya?ml$"
      ],
      "matchStrings": [
        "UV_VERSION:\\s*['\"]?(?<currentValue>\\d+\\.\\d+\\.\\d+)['\"]?"
      ],
      "datasourceTemplate": "pypi",
      "depNameTemplate": "uv"
    }
  ]
}
